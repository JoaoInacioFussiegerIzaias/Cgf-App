<h2>Editar máquina</h2>
<div class="card">
    <div class="card-body">
   <form action="/admin/edit/maquina" method="POST">
        <input type="hidden" name="id" value="{{maquina._id}}">
        <label for="modelo">Modelo: </label>
        <input type="text" id="modelo" name="modelo" class="form-control" value="{{maquina.modelo}}">
        <label for="marca">Marca:</label>
        <input type="text" id="marca" name="marca" class="form-control" value="{{maquina.marca}}">
        <label for="peso">Peso</label>
        <input type="number" id="peso" name="peso" class="form-control" value="{{maquina.peso}}">
        <label for="potencia">Potência</label>
        <input type="number" id="potencia" name="potencia" class="form-control" value="{{maquina.potencia}}">
        <label for="altura">Altura</label>
        <input type="number" id="altura" name="altura" class="form-control" value="{{maquina.altura}}">
        <label for="largura">Largura</label>
        <input type="number" id="largura" name="largura" class="form-control" value="{{maquina.largura}}">
        <a href=""><button class="btn btn-success mt-4" type="submit">Editar máquinas</button></a>
    </form>
    </div>
</div>