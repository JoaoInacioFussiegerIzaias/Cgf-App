{{#if erros}}
    {{#each erros}}
        <div class="bg-red-500 text-white p-4 rounded-lg mb-4">
            {{texto}}
        </div>
    {{/each}}
{{/if}}

{{#if success_msg}}
    <div class="bg-green-500 text-white p-4 rounded-lg mb-4">
        {{success_msg}}
    </div>
{{/if}}

<div class=" w-full mt-20 bg-white p-6 rounded-lg shadow-lg h">
    <div class="flex itens-center justify-between ">
        <div class="mb-4">
            {{!-- Preciso ver o que botar aqui --}}
        </div>
        <div>
            <form action="/usuarios/new/cadastro" method="POST">
            <div class="mb-4 pl-30">
                <h3 class="text-2xl">Crie sua conta</h3>
            </div>
                <div class="mb-4">
                    <label for="nome" class="block text-sm font-medium text-gray-700">Nome:</label>
                    <input type="text" name="nome" class="w-100 p-3 border border-gray-300 rounded-md mt-2" placeholder="Nome" required>
                </div>
                <div class="mb-4">
                    <label for="sobrenome" class="block text-sm font-medium text-gray-700">Sobrenome:</label>
                    <input type="text" name="sobrenome" class="w-full p-3 border border-gray-300 rounded-md mt-2" placeholder="Sobrenome" required>
                </div>
                <div class="mb-4">
                    <label for="telefone" class="block text-sm font-medium text-gray-700">Telefone:</label>
                    <input type="number" name="telefone" class="w-full p-3 border border-gray-300 rounded-md mt-2" placeholder="Telefone" required>
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700">Email:</label>
                    <input type="email" name="email" class="w-full p-3 border border-gray-300 rounded-md mt-2" placeholder="Email" required>
                </div>
                <div class="mb-4">
                    <label for="senha" class="block text-sm font-medium text-gray-700">Senha:</label>
                    <input type="password" name="senha" class="w-full p-3 border border-gray-300 rounded-md mt-2" placeholder="Senha" required>
                </div>
                <div class="mb-4">
                    <label for="senha_2" class="block text-sm font-medium text-gray-700">Repetir senha:</label>
                    <input type="password" name="senha_2" class="w-full p-3 border border-gray-300 rounded-md mt-2" placeholder="Repetir senha">
                </div>
                <button type="submit" class="w-full py-2 bg-yellow-500 text-white font-semibold rounded-md mt-4 hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-500">Criar conta</button>
            </form>
        </div>
    </div>
</div>
